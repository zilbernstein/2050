<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CoreAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/appWhite</item>
    </style>

    <!--Пункт бокового меню-->
    <style name="Widget.App.MainDrawer.MenuItem" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/m_drawer_item</item>
        <item name="android:background">@drawable/bg_m_drawer_item</item>
    </style>

    <style name="Widget.MeasurementDetail.Label" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.MeasurementDetail.Value" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.MeasurementDetail.WheelPairLabel" parent="Widget.MeasurementDetail.Label">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.MeasurementDetail.WheelPairValue" parent="Widget.MeasurementDetail.Value">
        <item name="android:background">@drawable/grey_cloud</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>
