<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_section"
    android:padding="16dp">

    <View
        android:id="@+id/section_view_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/red_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/measurement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:ellipsize="end"
        android:maxLength="40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/section_view_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Секция 1/16" />

    <TextView
        android:id="@+id/section_repair_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/measurement_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ТипРемонта" />

    <TextView
        android:id="@+id/section_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/grey_cloud"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/section_repair_type"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ТО1" />

</androidx.constraintlayout.widget.ConstraintLayout>