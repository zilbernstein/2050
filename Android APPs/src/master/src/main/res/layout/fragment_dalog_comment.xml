<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_dialog_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/appBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Трещина на кожухе" />

    <EditText
        android:id="@+id/fragment_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:hint="@string/comment_dialog_hint"
        android:padding="16dp"
        android:background="@color/appWhite"
        android:scrollbars="vertical"
        android:textColor="@color/appBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_dialog_cancel_btn"
        app:layout_constraintHeight_percent="50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_dialog_comment_title" />

    <Button
        android:id="@+id/fragment_dialog_cancel_btn"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:textColor="@color/appWhite"
        android:textAllCaps="true"
        android:text="@string/comment_dialog_cancel"
        android:background="@drawable/gray_btn"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/fragment_dialog_ready_btn"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:textColor="@color/appWhite"
        android:textAllCaps="true"
        android:text="@string/comment_dialog_ready"
        android:background="@drawable/red_button"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>