<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_work_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:textColor="@color/appBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_work_list_first_performer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Тормоз ручной электрововоза отремонтировать" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_work_list_first_performer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/name_text_background"
        android:padding="4dp"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_work_list_second_performer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Слуцкий А.В." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_work_list_second_performer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/name_text_background"
        android:padding="4dp"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_work_list_fird_performer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Слуцкий А.В." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_work_list_fird_performer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/name_text_background"
        android:padding="4dp"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_work_list_amount_of_performer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Слуцкий А.В." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_work_list_amount_of_performer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/name_text_background"
        android:padding="4dp"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+ 3 чел." />
</androidx.constraintlayout.widget.ConstraintLayout>