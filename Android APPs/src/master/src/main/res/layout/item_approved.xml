<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
        android:id="@+id/item_approved_left_indicator"
        android:layout_width="16dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_approved_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_approved_right_indicator"
        app:layout_constraintLeft_toRightOf="@+id/item_approved_left_indicator"/>

    <TextView
        android:id="@+id/item_approved_performer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_approved_title"
        app:layout_constraintRight_toLeftOf="@+id/item_approved_right_indicator"
        app:layout_constraintLeft_toRightOf="@+id/item_approved_left_indicator"/>

    <TextView
        android:id="@+id/item_approved_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_approved_performer"
        app:layout_constraintRight_toLeftOf="@+id/item_approved_right_indicator"
        app:layout_constraintLeft_toRightOf="@+id/item_approved_left_indicator"/>


    <View
        android:id="@+id/item_approved_right_indicator"
        android:layout_width="16dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>