<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_workaround_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/dialog_workaround_notice_text"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/negative_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_button"
        android:text="@string/dialog_workaround_notice_negative_btn"
        android:textColor="@color/appWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/positive_btn"
        app:layout_constraintStart_toStartOf="@id/text_workaround_notice"
        app:layout_constraintTop_toBottomOf="@id/text_workaround_notice" />

    <Button
        android:id="@+id/positive_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/green_button"
        android:text="@string/dialog_workaround_notice_positive_btn"
        android:textColor="@color/appWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/text_workaround_notice"
        app:layout_constraintStart_toEndOf="@id/negative_btn"
        app:layout_constraintTop_toBottomOf="@id/text_workaround_notice" />


</androidx.constraintlayout.widget.ConstraintLayout>