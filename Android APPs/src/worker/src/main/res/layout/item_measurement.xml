<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appWhite"
    android:focusableInTouchMode="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="168dp" />

    <TextView
        android:id="@+id/measure_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/appBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Высота путеочистителей Переднеего чего-то там орнофплф пшфпршг кпрфп йфкеп пфпр имргфгрепрфп фшпк мхфнп" />


    <TextView
        android:id="@+id/measure_item_value_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/measure_item_value_title"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_value_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_value_text"
        tools:text="Значение" />

    <EditText
        android:id="@+id/measure_item_value_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:padding="6dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/measure_item_norma_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/measure_item_title"
        app:layout_goneMarginTop="8dp"
        tools:text="Точность: 0" />

    <TextView
        android:id="@+id/measure_item_norma_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/measure_item_norma_title"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_norma_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_norma_text"
        tools:text="Норма" />

    <TextView
        android:id="@+id/measure_item_norma_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/measure_item_measure_type_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/measure_item_value_text"
        tools:text="100-150" />

    <TextView
        android:id="@+id/measure_item_measure_type_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/measure_item_measure_type"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_measure_type_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_measure_type_text" />

    <TextView
        android:id="@+id/measure_item_measure_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/measure_item_worker_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/measure_item_norma_text"
        tools:text="Ручной" />

    <TextView
        android:id="@+id/measure_item_worker_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/measure_item_worker_title"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_worker_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_worker_text"
        tools:text="Сотрудник" />

    <TextView
        android:id="@+id/measure_item_worker_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/measure_item_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/measure_item_measure_type_text"
        tools:text="Котов Вячеслав Викторович" />

    <TextView
        android:id="@+id/measure_item_date_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/measure_item_date_title"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_date_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_date_text"
        tools:text="Дата" />

    <TextView
        android:id="@+id/measure_item_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/measurement_comment_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/measure_item_worker_text"
        tools:text="12.08.2019" />

    <View
        android:id="@+id/measurement_comment_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidline_bottom" />

    <TextView
        android:id="@+id/measure_item_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/measurement_comment_bg"
        app:layout_constraintEnd_toEndOf="@id/measurement_comment_bg"
        app:layout_constraintStart_toStartOf="@id/measurement_comment_bg"
        app:layout_constraintTop_toTopOf="@id/measurement_comment_bg"
        tools:text="Комментариев нет" />

    <ImageView
        android:id="@+id/comments_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_eye_bk"
        app:layout_constraintBottom_toBottomOf="@id/measure_item_comments"
        app:layout_constraintStart_toEndOf="@id/measure_item_comments"
        app:layout_constraintTop_toTopOf="@id/measure_item_comments" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintBottom_toBottomOf="@id/guidline_bottom"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/measure_item_value_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_value_text" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_norma_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_worker_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_measure_type_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_item_date_title" />

    <View
        android:id="@+id/guidline_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tmc_dvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measure_item_date_title" />
</androidx.constraintlayout.widget.ConstraintLayout>