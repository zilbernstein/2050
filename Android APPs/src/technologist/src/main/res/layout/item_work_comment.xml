<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/work_parameter_comment_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_weight="0.25"
        android:background="@color/appWhite"
        android:padding="10dp"
        android:text="@string/work_activity_comment_value"
        android:textAllCaps="true"
        android:textColor="@color/appBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/work_parameter_comment_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.75"
        android:background="@color/appWhite"
        android:drawableRight="@drawable/ic_create"
        android:padding="10dp"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor." />


</LinearLayout>