<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainDrawer"
        android:layout_width="256dp"
        android:layout_height="match_parent"
        android:background="@color/appWhite">

        <ImageView
            android:id="@+id/drawer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/drawer_main_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nameColor"
            android:padding="20dp"
            android:text="@string/main_drawer_name"
            android:textColor="@color/appWhite"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawer_logo" />

        <TextView
            android:id="@+id/drawer_main_remarks"
            style="@style/Widget.App.MainDrawer.MenuItem"
            android:drawableLeft="@drawable/ic_edit_image"
            android:gravity="start"
            android:paddingStart="40dp"
            android:text="@string/main_drawer_remarks"
            android:textColor="@color/appBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawer_main_name" />

        <TextView
            android:id="@+id/drawer_main_messages"
            style="@style/Widget.App.MainDrawer.MenuItem"
            android:drawableLeft="@drawable/ic_baseline_chat"
            android:gravity="start"
            android:paddingStart="40dp"
            android:text="@string/main_drawer_messages"
            android:textColor="@color/appBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawer_main_remarks" />

        <TextView
            android:id="@+id/drawer_main_telephone_book"
            style="@style/Widget.App.MainDrawer.MenuItem"
            android:drawableLeft="@drawable/ic_icon_phone"
            android:gravity="start"
            android:paddingStart="40dp"
            android:text="@string/main_drawer_telephones"
            android:textColor="@color/appBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawer_main_messages" />

        <TextView
            android:id="@+id/drawer_main_exit"
            style="@style/Widget.App.MainDrawer.MenuItem"
            android:drawableLeft="@drawable/ic_baseline_clear_24px"
            android:gravity="start"
            android:paddingStart="40dp"
            android:text="@string/main_drawer_exit"
            android:textColor="@color/appBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/drawer_main_version"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/drawer_main_version"
            style="@style/Widget.App.MainDrawer.MenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:padding="0dp"
            android:text="@string/main_drawer_version"
            android:textColor="@color/appGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>