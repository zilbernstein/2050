<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_remark_work"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appWhite">

    <TextView
        android:id="@+id/repeats_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_repeate"
        android:gravity="center"
        android:textColor="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="@+id/remark_work_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/remark_work_name"
        tools:text="99" />

    <TextView
        android:id="@+id/remark_work_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@color/appWhite"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/repeats_count"
        app:layout_constraintRight_toLeftOf="@id/checkbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Щетку тягового электродвигателя с притиркой по коллектору и регулировкой нажатия пальца" />

    <TextView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_text_view_choice"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="@id/remark_work_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/remark_work_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
