<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Application theme-->
    <style name="CoreAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_checkbox</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/ic_checkbox</item>
        <item name="android:textColorTertiary">@color/text_default</item>
        <item name="android:editTextColor">@color/text_default</item>
    </style>

    <style name="Widget.App.Button.BlackCorner" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_btn_black_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.App.CompoundButton.RadioButton.Tab" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/bg_tab</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>